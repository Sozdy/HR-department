.search
    width 100%
    position relative
    display flex
    margin-top 4vw

    .search_box
        width 100%
        border 1px solid rgba(0, 0, 0, 0.05)
        border-right none
        padding 20px 2vw
        height 36px
        outline none

    .search_btn
        width 46px
        height 42px
        border 1px solid rgba(0, 0, 0, 0.05)
        background #819BD1
        text-align center
        color #fff
        cursor pointer
        font-size 20px
        font-weight 100

@media (min-width: 768px)
    .search
        margin-top 2vw


.vacancies_list
    display grid
    grid-template-rows 1fr
    grid-template-columns 1fr
    grid-gap 2vw

    .vacancies_item
        margin 20px 15px 0 15px
        background #ffffff
        box-shadow 0px 2px 2px rgba(0, 0, 0, 0.05)
        padding 0
        border 1px solid rgba(0, 0, 0, 0.05)
        transition 0.3s

        &:hover
            box-shadow 2px 2px 2px rgba(0, 0, 0, 0.1)

        .vacancies_title_block
            background-color #E4E5CF
            padding 2vh 2vw
            font-weight 600
            line-height 1.3em

        .vacancies_description_block
            padding 2vh 2vw
            line-height 1.3em

            .date
                font-style italic
                font-size .9em

        @media (max-width: 767px)
            .vacancies_description_block
                font-size .9em



.vacancy_block
    width 100%
    box-shadow 0
    margin-top 2vw
    line-height 1.6em

    @media (min-width: 576px)
        padding 0
        box-shadow 0 4px 4px rgba(0, 0, 0, 0.1)

    .vacancies_title
        background-color #E4E5CF
        padding 2vh 2vw
        font-weight 600

    .paragraph
        padding 2vh 2vw

        &.green
            background-color rgba(112, 212, 180, 0.3)
            padding-bottom 1vh

        &.gray
            background-color rgba(168, 179, 180, 0.1)

        .subtitle
            font-weight 600
            color rgba(51, 51, 51, 0.8)
            margin-bottom 0

        .date
            font-style italic
            font-size .9em
            text-align right

@media (max-width: 767px)
    .vacancy_block
        margin-top 4vw

.save-print
    a
        cursor pointer
        padding-top 15px

    @media (max-width: 575px)
        padding 15px

.white-bg
    background-color white
