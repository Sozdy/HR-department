.form_block
    width 100%
    box-shadow 0px 4px 4px rgba(0, 0, 0, 0.1)
    padding 2vw
    margin-top 4vw
    background-color white

    .form_title
        text-align center
        font-weight 600
        margin-bottom 20px
        font-size 1.1em

    .form_subtitle
        font-size .9em
        margin-bottom 10px
        margin-top 50px
        font-weight bold

    label
        cursor pointer

    input
    select
        margin-bottom 15px
        font-size .9em

        @media (max-width: 767px)
            font-size 1em

    input[type="text"]
    input[type="email"]
    input[type="password"]
    input[type="date"]
    input[type="number"]
    input[type="phone"]
    select
        border-radius 1px
        border 1px solid rgba(0, 0, 0, 0.36)
        width 100%
        display block
        padding 10px

    input[type="checkbox"]
        margin-bottom 0

    select
        padding-top 0
        padding-bottom 0
