.all_news_btn
    background-color #854957
    display flex
    justify-content space-between
    padding 15px
    height 100%
    align-items center
    transition 0.3s
    cursor pointer

    &:hover
        transform scale(1.02)
        box-shadow 0px 2px 2px rgba(0, 0, 0, 0.1)

    .btn_text
        margin 0

