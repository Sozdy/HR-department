@import "layouts/navbar"


//Footer styles

.vue-footer
    background #2F4365
    color #ffffff
    margin-top 4vw
    display flex
    text-align center


    .d-flex
        flex-direction column

    .container

        .logo-box
            display inline-block
            position relative
            z-index 2
            margin 48px 0 20px 0
            display none
            max-width 100%


    @media (min-width: 626px)

        .d-flex
            justify-content flex-start

            .logo-box
                margin 0


    @media (min-width: 768px)

        .d-flex
            .logo-box
                display block
                .logo
                    max-width 100%
                    max-height 150px


@media (min-width: 768px)
    .vue-footer
        margin-top 30px
        text-align left



.footer_text_title
    font-weight 600
    margin-top 20px
    margin-bottom 5px

.footer_text
    font-size .7rem
    line-height 2em
    display: inline-block

a
    text-decoration underline

.social_block
    display block

    .social_icon
        width 35px
        height 35px
        display inline-block
        border-radius 5px
        margin 10px 10px 0 0
        background-repeat no-repeat
        background-position center
        background-size cover

        &.instagram
            background-image url("/img/instagram.svg")

        &.youtube
            background-image url("/img/youtube.svg")

        &.twitter
            background-image url("/img/twitter.svg")







