.news_list
    display grid
    grid-template-rows 1fr 1fr 1fr
    grid-template-columns 1fr 1fr 1fr 1fr
    grid-gap 30px
    margin-top 2vw

    &.main_page
        grid-template-rows 1fr

.news_item_block
    display: inherit;

    a
        width 100%

    .news_item
        position relative
        font-size .9em
        line-height 1.3em
        background #EAE9F0
        box-shadow 0px 2px 2px rgba(0, 0, 0, 0.05)
        transition 0.3s
        cursor pointer
        display flex
        flex-direction column
        height 100%

        &:hover
            transform scale(1.02)
            box-shadow 0px 2px 2px rgba(0, 0, 0, 0.1)

        .bg_img
            padding-bottom 66.66%
            background url("/img/photo.jpeg")
            background-size cover
            background-repeat no-repeat
            background-position center

        .content
            padding 20px
            display flex
            flex-direction column

            .description
                margin-bottom 20px

            .data_block
                position absolute
                bottom 0
                margin-bottom 20px

                .date
                    font-size .8em
                    font-style italic
                    margin 0
                    font-weight 100

@media (max-width: 1280px)
    .news_list
        grid-template-rows 1fr 1fr 1fr 1fr
        grid-template-columns 1fr 1fr 1fr

@media (max-width: 767px)
    .news_list
        grid-template-rows 1fr
        grid-template-columns 1fr
        margin-top 4vw


.news_photo
    padding-top 30%
    background-image url("/img/photo.jpeg")
    background-repeat no-repeat
    background-position center
    background-size cover

.news_title
    font-weight 600
    color #333333
    padding-top 5vh
    padding-bottom 1vh
